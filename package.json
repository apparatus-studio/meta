{
  "private": true,
  "description": "Apparatus Meta",
  "workspaces": [
    "packages/@apparatus/meta/*"
  ],
  "devDependencies": {
    "@apparatus/meta-start-preset": "*",
    "@nextools/eslint-config": "^0.1.2",
    "@nextools/typescript-config": "^0.1.0",
    "@sandbox/ui": "^3.0.0",
    "@start/plugin": "^1.0.0",
    "@types/node": "^13.13.4",
