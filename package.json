    "ignoreDeps": [
      "gradle",
      "typescript"
    ],
    "packageRules": [
      {
        "packageNames": [
          "@types/node"
        ],
        "allowedVersions": "<12"
      }
    ]
  },
  "engines": {
    "node": ">=10.13.0"
  }
}
