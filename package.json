    "elegir": "^1.0.0",
    "eslint": "^6.1.0",
    "graphiq": "^0.2.3",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "react-native": "0.62.2",
    "redux": "^4.0.4",
    "refun": "^2.0.0",
    "tsfn": "^1.1.1",
    "typescript": "^3.8.3"
  },
  "start": {
    "file": "tasks/",
    "auto": {
      "shouldWriteChangelogFiles": true
    }
  },
  "auto": {
    "bump": {
      "initialType": "minor",
      "zeroBreakingChangeType": "minor"
    },
    "npm": {
      "publishSubDirectory": "build",
      "access": "public"
    },
    "prefixes": {
      "major": "ğŸ’¥",
      "minor": "ğŸŒ±",
      "patch": "ğŸ",
      "publish": "ğŸ“¦",
      "initial": "ğŸ£",
      "cleanup": "ğŸ§¹",
      "lint": "ğŸš·",
      "test": "ğŸ‘¾",
      "docs": "ğŸ“",
      "refactor": "ğŸ› ",
      "wip": "ğŸš§",
      "screenshots": "ğŸ“¸",
